<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pearson Flights</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="site-header">
        <div class="header-content">
            <div class="logo">✈️ Pearson Flights</div>
            <nav>
                <a href="/Flights/Arrivals" class="nav-link">Arrivals</a>
                <a href="/Flights/Departures" class="nav-link">Departures</a>
            </nav>
        </div>
    </header>
    <main role="main" class="main-container">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="footer-content">Flight feed for Toronto Pearson Airport.</div>
    </footer>
</body>
</html>
